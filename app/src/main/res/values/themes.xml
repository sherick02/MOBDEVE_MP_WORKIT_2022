<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Toolbar activity Theme -->
    <style name="Theme.WorkIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>
    <!--  full screen with status bar.  -->
    <style name="AppThemeFullScreenWithStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <!--  full screen  -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dip</item>
        <item name="cornerSizeTopRight">20dip</item>
        <item name="cornerSizeBottomLeft">0dip</item>
        <item name="cornerSizeBottomRight">0dip</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialButton.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dip</item>
    </style>

</resources>